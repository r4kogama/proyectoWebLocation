rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Cada usuario puede leer/escribir solo su propio documento en /users/{uid}
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Colección de publicaciones (posts): lectura pública, escritura solo para usuarios autenticados
    match /posts/{postId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Comentarios: lectura pública, escritura solo si está autenticado
    match /comments/{commentId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Configuración de la app (solo admins pueden leer/escribir)
    match /settings/{docId} {
      allow read, write: if request.auth != null &&
        firestore.get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    // Fallback: denegar todo lo no especificado
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
